rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Cho phép đọc tất cả file trong thư mục recruit-cv
    match /recruit-cv/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Cho phép đọc tất cả file trong thư mục uploads (cho các file khác)
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Cho phép đọc và ghi tất cả file trong thư mục assignments (từ backend admin)
    match /assignments/{allPaths=**} {
      allow read: if true;
      allow write: if true; // Cho phép backend admin upload
    }
    
    // Cho phép đọc tất cả file khác
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 